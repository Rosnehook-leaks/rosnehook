<Tab name="UI" padding="4 4 4 4">
    <Box padding="12 6 6 6" width="content" height="content" name="UI">
        <List width="172">
            <AutoVariable width="fill" target="visual.open-gui-button" label="GUI button"
                          tooltip="Button to toggle this menu."/>
            <AutoVariable width="fill" target="visual.disable" label="Disable visuals"/>
            <AutoVariable width="fill" target="visual.medal-flip" label="Guaranteed medal flip"/>
            <LabeledObject width="fill" label="Software cursor mode" tooltip="WARNING: Advanced users only.">
                <Select target="visual.software-cursor-mode">
                    <Option name="Keep" value="0"/>
                    <Option name="Always" value="1"/>
                    <Option name="Never" value="2"/>
                    <Option name="Menu on" value="3"/>
                </Select>
            </LabeledObject>
            <AutoVariable width="fill" target="visual.font_size.esp" label="Main font size"/>
            <AutoVariable width="fill" target="visual.font_size.center_size" label="Center string font size"/>
    <Box padding="12 6 6 6" width="content" height="content" name="Team colors" x="185">
        <List width="150">
            <AutoVariable width="fill" target="colors.team-red" label="Red"/>
            <AutoVariable width="fill" target="colors.team-blu" label="Blu"/>
            <AutoVariable width="fill" target="colors.team-red.background" label="Red background"/>
            <AutoVariable width="fill" target="colors.team-blu.background" label="Blu background"/>
            <AutoVariable width="fill" target="colors.team-red.vaccinator" label="Red vaccinator"/>
            <AutoVariable width="fill" target="colors.team-blu.vaccinator" label="Blu vaccinator"/>
            <AutoVariable width="fill" target="colors.team-red.ubercharge" label="Red ubercharge"/>
            <AutoVariable width="fill" target="colors.team-blu.ubercharge" label="Blu ubercharge"/>
        </List>
    </Box>
</Tab>
